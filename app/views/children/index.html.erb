<%if @children.exists?%>		
<%@children.each do |child|%>	
	
			<%if !child.cards.exists? %>
			<div class="container" class="clearfix">

				<section class="profile">
				
					<section class="name"><%=child.name%></section>
				<h6><%=link_to "edit this profile", edit_child_path(child)%></h6>
				<p>Birthday: <%=fix_date(child)%></p>
				
				<p><%=child.gender%></p>

				</section>

				<section class = "stats">

					There are no cards for <%=child.name%> yet.

					<h4><%=link_to "Create a card for #{child.name}", new_child_card_path(child)%></h4>

				</section>
					</div>
				

				<%else%>


				<div class="container" class="clearfix">

				<section class="profile">


				<section class="name"><%=child.name%></section>
				<h6><%=link_to "edit this profile", edit_child_path(child)%></h6>
				<p>Birthday: <%=fix_date(child)%></p>
				
				<p><%=child.gender%></p>

				<h4>Select an age to see:</h4>	
					<%child.ordered.each do |card|%>
						<%=link_to card.short_age, child_card_path(child.id, card.id)%>  	&#9702;
					<%end%>	
				
				
				</section>
				<section class = "stats">
				
				<h3> Age: <%=child.latest_card.age%> </h3>	

				<h3> <%=height_check(child.latest_card)%></h3>
		
				<h3> <%=weight_check(child.latest_card)%><h3>

				<h3> <%=advil_check(child.latest_card)%></h3>

				<h3> <%=tylenol_check(child.latest_card)%></h3>
	
				<h3><%=flu_shot_given(child.latest_card)%></h3>

			</section>
				
					<%end%>	
					</div>		
			
			<%end%>

			
			
				<%else%>
				<div class="container" class="clearfix">
					<h3>Welcome to SproutHQ</h3>
					<h5>Get started by <%=link_to "creating your child's profile", new_child_path %></h5>
				</div>
				<%end%>
	</div>